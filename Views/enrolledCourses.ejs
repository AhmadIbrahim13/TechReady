<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Enrolled Courses</title>

  <!-- Bootstrap and Custom CSS -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
  <link href="/css/font-awesome.min.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />
  <link href="/css/responsive.css" rel="stylesheet" />
  <style>
    .enrolled-box {
      background-color: #003366;
      color: #fff;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      transition: transform 0.3s ease-in-out;
    }
    .enrolled-box:hover {
      transform: scale(1.03);
    }
    .drop-btn {
      background-color: crimson;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 8px 15px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .drop-btn:hover {
      background-color: darkred;
    }
  </style>
</head>
<body class="sub_page">

  <!-- Header -->
  <header class="header_section">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg custom_nav-container">
        <a class="navbar-brand" href="/home">
          <span>TechReady</span>
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
            <li class="nav-item active"><a class="nav-link" href="/enrolled-courses">Enrolled Courses</a></li>
          </ul>
        </div>
      </nav>
    </div>
  </header>

  <!-- Enrolled Courses Section -->
  <div class="container my-5">
    <h2 class="text-center mb-4">Your <span style="color: dodgerblue;">Enrolled Courses</span></h2>
    <div class="row">
      <% if (courses.length === 0) { %>
        <p class="text-center">You have not enrolled in any courses yet.</p>
      <% } else { %>
        <% courses.forEach(course => { %>
          <div class="col-md-4">
            <div class="enrolled-box text-center">
              <h5><%= course.title %></h5>
              <p><%= course.description %></p>
              <p><strong>Instructor:</strong> <%= course.instructor %></p>
              <p><strong>Duration:</strong> <%= course.duration %></p>
              <form action="/drop" method="POST">
                <input type="hidden" name="courseId" value="<%= course.id %>">
                <button type="submit" class="drop-btn">Drop</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <section class="footer_section">
    <div class="container">
      <p>&copy; <span id="displayYear"></span> All Rights Reserved By TechReady</p>
    </div>
  </section>

  <!-- Scripts -->
  <script src="/js/jquery-3.4.1.min.js"></script>
  <script src="/js/bootstrap.js"></script>
</body>
</html>
