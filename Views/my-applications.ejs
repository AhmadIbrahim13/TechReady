<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Applications</title>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">My Job Applications</h2>

    <% if (applications.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Job Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>CV File</th>
            <th>Applied At</th>
          </tr>
        </thead>
        <tbody>
          <% applications.forEach((app, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= app.title %></td>
              <td><%= app.company %></td>
              <td><%= app.location %></td>
              <td>
                <a href="/uploads/<%= app.cv_file %>" target="_blank" class="btn btn-primary btn-sm">
                  View CV
                </a>
              </td>
              <td><%= new Date(app.applied_at).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-center">You have not applied for any jobs yet.</p>
    <% } %>
  </div>
</body>
</html>
