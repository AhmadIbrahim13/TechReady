<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link rel="shortcut icon" href="images/favicom.png" type="">
  <title>Available Courses</title>
  
  <!-- Bootstrap and Custom CSS -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
  <link href="/css/font-awesome.min.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />
  <link href="/css/responsive.css" rel="stylesheet" />
  <style>
/* Main container styling */
.service_section .container {
  max-width: 1200px;
  margin: auto;
}

/* Course box styling */
.service_section .box {
  background-color: #00204a;
  color: #fff;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  text-align: center;
}

.service_section .box:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
}

/* Heading text */
.service_section h5 {
  font-size: 1.3rem;
  font-weight: 700;
  color: #f2f2f2; /* Light grey for visibility */
  margin-bottom: 10px;
}



/* Responsive Design */
@media (max-width: 768px) {
  .service_section .col-md-4 {
    flex: 0 0 100%;
    max-width: 100%;
  }
}

  </style>
</head>
<body class="sub_page">

  <!-- Hero Section -->
  <div class="hero_area">
    <div class="hero_bg_box">
      <div class="bg_img_box">
        <img src="images/hero-bg.png" alt="">
      </div>
    </div>
    <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container ">
          <a class="navbar-brand" href="/home"><span>TechReady</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
            <span></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
              <li class="nav-item active"><a class="nav-link" href="/services">Services</a></li>
            </ul>
          </div>
        </nav>
      </div>
    </header>
  </div>

  <!-- Courses Section -->
  <section class="service_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>Available <span>Courses</span></h2>
      </div>
      <div class="row">
        <% courses.forEach(course => { %>
          <div class="col-md-4 mb-4">
            <div class="box p-3">
              <h5><%= course.title %></h5>
              <p><%= course.description %></p>
              <p><strong>Instructor:</strong> <%= course.instructor %></p>
              <p><strong>Duration:</strong> <%= course.duration %></p>
              <form action="<%= enrolledCourseIds.includes(course.id) ? '/drop' : '/enroll' %>" method="POST">
                <input type="hidden" name="courseId" value="<%= course.id %>">
                <button type="submit" class="enroll-btn">
                  <%= enrolledCourseIds.includes(course.id) ? 'Drop' : 'Enroll' %>
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <section class="footer_section">
    <div class="container">
      <p>&copy; <span id="displayYear"></span> All Rights Reserved By TechReady</p>
    </div>
  </section>

  <!-- Scripts -->
  <script src="/js/jquery-3.4.1.min.js"></script>
  <script src="/js/bootstrap.js"></script>
</body>
</html>
